<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             x:Class="SkEditor.Controls.FunctionTooltip">

	<UserControl.Styles>

	</UserControl.Styles>

	<StackPanel Name="TooltipPanel" Spacing="10" Margin="5">
		<StackPanel Orientation="Horizontal">
			<ui:IconSourceElement Name="Icon" IconSource="{StaticResource FunctionIcon}"
								  Height="16" Foreground="#ff6542" Margin="0,0,7,0" VerticalAlignment="Top" />

			<StackPanel Name="FunctionContentPanel"></StackPanel>
		</StackPanel>
	</StackPanel>
</UserControl>